AC_ARG_WITH([kojakinst],
  AS_HELP_STRING([--with-kojakinst], [instrumentalise for KOJAK [default=no]]),
  with_kojakinst=$withval, with_kojakinst=no)
if test $with_kojakinst = yes; then
