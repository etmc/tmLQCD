L=4
T=4
Measurements = 100000
StartCondition = cold
ThermalisationSweeps=100
2KappaMu = 0.083333
kappa = 0.208333
NSave = 10000
ThetaT = 1
UseEvenOdd = yes
ReversibilityCheck = no
ReversibilityCheckIntervall = 1
DebugLevel = 1

BeginMeasurement CORRELATORS
  Frequency = 20
EndMeasurement

BeginMonomial GAUGE
  Timescale = 0
  Beta = 2.3
  Type = Iwasaki
EndMonomial

BeginMonomial DETRATIO
  Timescale = 1
  2KappaMu = 0.0
  2KappaMu2 = 0.083333
  kappa = 0.208333
  kappa2 = 0.208333
  AcceptancePrecision =  1e-20
  ForcePrecision = 1e-12
  Name = detrat
  Solver = CG
  CSGHistory = 0
EndMonomial

BeginIntegrator 
  Type0 = 2MN
  Type1 = 2MN
  IntegrationSteps0 = 2
  IntegrationSteps1 = 4
  Tau = 0.5
  Lambda0 = 0.19
  Lambda1 = 0.21
  NumberOfTimescales = 2
EndIntegrator

BeginOperator TMWILSON
  2KappaMu = 0.083333
  kappa = 0.208333
  UseEvenOdd = yes
  Solver = CG
  SolverPrecision = 1e-14
  MaxSolverIterations = 1000
EndOperator
